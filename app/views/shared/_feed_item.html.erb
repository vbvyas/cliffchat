<%= div_for(feed_item) do %>
<li class="minipost">
    <ul id="feeditemlist">
      <li id="left">
        <span id="gravatar">
          <%= link_to gravatar_for(feed_item.user), feed_item.user %>
        </span>
      </li>
      <li id="right">
        <span class="user">
          <%= link_to feed_item.user.name, feed_item.user %>
        </span>
        <span class="content"><%= wrap(feed_item.content) %></span>
        <span class="timestamp">
          Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
        </span>
        <% if current_user?(feed_item.user) %>
          <span class="delete">
            <%= link_to "Delete", feed_item,
              :method => :delete,
              :confirm => "Are you sure?",
              :title => feed_item.content,
              :remote => true
            %>
          </span>
        <% end %>
        <span>
          <%= render(partial: 'miniposts/follow_form', locals: {minipost: feed_item}) if signed_in? %>
        </span>
        <% unless feed_item.topics.nil? %>
          <br />
          <% feed_item.topics.each do |t| %>
            <%= link_to t.name, t %>
          <% end %>
        <% end %>
      </li>
    </li>
    <li><%= link_to feed_item.responses.empty? ? "Respond" : pluralize(feed_item.responses.count, "response"), feed_item, locals: {minipost: feed_item} %></li>
    <!--
      <% unless feed_item.responses.empty? %>
        <%= render :partial => 'responses/response', :collection => feed_item.responses %>
      <% end %>
      <li class="minipost">
      <%= render 'shared/response_form', :minipost => feed_item %>
      </li>
      -->
    </ul>
  <% end %>
