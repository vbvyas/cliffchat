<div style="background: #555555; border-radius: 17px; padding: 20px; width: 230px">
	<%= form_for(:session, url: sessions_path) do |f| %>
    <div class="field">
      <%= f.text_field :email, value: "email address", class: "hintTextbox", size: "33"%>
    </div>
    <div class="field">
      <%= f.password_field :password, value: "password", class: "hintTextbox", size: "25"%>
    </div>
    <div class="field">
      <span id="left">
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      </span>
      <span>
        <%= label_tag :remember_me %>
      </span>
    </div>
    <div class="actions">
      <%= link_to "Sign In", "#", class: "btn btn-primary", onclick: "$('form').submit()" %>
    </div>
	<% end %>
	<%= link_to "Forgot your password?", new_password_reset_path %>
	<br />
	<span style="color: white">New?</span> <%= link_to "Sign up for closefeed", signup_path %>
</div>
