<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tags %>
    <%= render 'layouts/stylesheets', media: 'all' %>
    <%= render 'layouts/javascripts' %>
  </head>
  <body>
    <%= if not current_page?('/') or (current_page?('/') and signed_in?)
          render 'layouts/header'
        end 
    %>
    <div class="container">
      <section class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>
        <%= yield %>
      </section>
    </div>
  </body>
  <%= render 'layouts/footer' %><br />
  <%= debug(params) if Rails.env.development? %>
</html>
